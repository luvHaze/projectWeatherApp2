<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="50dp"
    android:layout_height="80dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_day_Textview"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:fontFamily="@font/scoredream_thick"
        android:gravity="center"
        android:text="day"
        android:textAlignment="center"
        android:textSize="10dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/item_weather_LottieView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_speed="0.45"
        />

    <TextView
        android:id="@+id/item_temp_Textview"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:fontFamily="@font/scoredream_light"
        android:gravity="center"
        android:text="temp"
        android:textAlignment="center"
        android:textSize="14dp" />

</LinearLayout>